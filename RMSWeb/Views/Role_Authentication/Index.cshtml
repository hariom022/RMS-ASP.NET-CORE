@model RMS.Models.Role_Authentication

<div class="col-12">
    <div class="card good-Receipt overflow-auto">
        <div class="card-body">
            <h5 class="card-title">Role & Authentication</h5>

            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="login-container mt-5 mb-5">
                        <h2 class="login-title mb-4">Role & Authentication</h2>
                        <!-- Login Form -->
                        <form>
                            <div class="mb-3">
                                <label  asp-for="Name" for="name" class="form-label"> Name</label>
                                <input type="text"
                                       class="form-control"
                                       id="name"
                                       name="name"
                                       asp-for="Name"
                                       required />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" for="email" class="form-label"> Email</label>
                                <input type="text"
                                       class="form-control"
                                       id="email"
                                       name="email"
                                       asp-for="Email"
                                       required />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Role" for="role" class="form-label">Role</label>
                                <select class="form-select"
                                        id="role"
                                        name="role"
                                        asp-for="Role"
                                        required>
                                    <option value="">Select Role</option>
                                    <option value="admin">Admin</option>
                                    <option value="manager">Manager</option>
                                    <option value="staff">Staff</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" for="password" class="form-label">Password</label>
                                <input type="password"
                                       class="form-control"
                                       id="password"
                                       name="password"
                                       asp-for="Password"
                                       required />
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <a  class="text-light">
                                        Add
                                    </a>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>