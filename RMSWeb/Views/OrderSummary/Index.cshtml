@model IEnumerable<RMS.Models.OrderSummary>

@{
    ViewData["Title"] = "Index";
}

<div class="col-12 mt-5">
  
    <div class="card good-Receipt overflow-auto">
        <div class="card-body">
            <h5 class="card-title">Order Summary</h5>


            <div class="mt-3 d-flex justify-content-between">
                <div >
                    <p>Oreder No : 12345 </p>
                    <p>HF/Cust : Customer 1</p>
                </div>
                <div>
                    <p>Ref. No : 54674</p>
                    <p>Ref Date : 12/01/2024</p>
                </div>
               
        
            </div>
            <div style="width: 100%; overflow-x: auto " class="mt-3">
                <table class="table mt-5">
                    <thead>
                        <tr class="text-center">
                           
                            <th>
                                @Html.DisplayNameFor(model => model.ProductCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UnitOfMeasurement)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                             
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitOfMeasurement)
                                </td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <hr />
        
    </div>
    <div class="btn-container text-center">
        <a href="#">
            <button style="border:none; border-radius:3px" class="accept-btn bg-success text-light">Accept</button>
        </a>
        <a href="#">
            <button style="border:none ; border-radius:3px" class="reject-btn bg-danger text-light">Reject</button>
        </a>
    </div>
</div>
