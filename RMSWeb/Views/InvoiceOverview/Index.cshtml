@model RMS.Models.InvoiceModelOverview
@{
    ViewData["Title"] = "Index";
}

<div class="col-12 mt-3">
    <div class="card good-Receipt overflow-auto">
        <div class="card-body">
            <h5 class="card-title">Invoice</h5>
            <div style="width: 100%; overflow-x: auto">
                <table class="table table-hover table-bordered"
                       style="margin-bottom: 0px !important">
                    <thead>
                        <tr class="text-center">
                            <th scope="col">Item</th>
                            <th scope="col">Material Code</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Description</th>
                            <th scope="col">Rate</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Invoice)
                        {
                            <tr class="text-center">
                                <td>
                                  @item.Item  
                                </td>
                                <td>@item.MaterialCode</td>
                                <td>@item.Quantity</td>
                                <td>@item.Description</td>
                                <td>@item.Rate</td>
                                <td>@item.Total</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="total-quotation p-4 mt-0 text-end fw-bold">
            <p>SubTotal : @Model.SubTotal</p>
            <p>Tax 10% : @Model.Tax </p>
            <p>Ttoal Amount :@Model.TotalAmount </p>
        </div>
    </div>
</div>
<div class="btn-container text-center">
    <a href="#">
        <button class="accept-btn text-light bg-success" style="border:none; border-radius:3px">Accept</button>
    </a>
    <a href="#">
        <button class="reject-btn text-light bg-danger " style="border:none; border-radius:3px">Reject</button>
    </a>
</div>